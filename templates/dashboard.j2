                    <div class="gallery-display">
                        <img id="gallery-main-img" src="" alt="Select Data">
                        <div class="gallery-info">
                            <h3 id="gallery-title">SYSTEM READY</h3>
                        </div>
                    </div>
                    <button class="gallery-nav next" onclick="changeGalleryImage(1)">❯</button>
