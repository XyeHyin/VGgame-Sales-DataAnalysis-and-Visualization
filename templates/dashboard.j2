    <script>
        let galleryData = {{ STATIC_GALLERY_DATA | safe }};
        console.log("Gallery Data Loaded:", galleryData);
        let currentGalleryIndex = 0;

        function initGallery() {
            if (!galleryData || galleryData.length === 0) return;

            const leftContainer = document.getElementById('gallery-left');
            const rightContainer = document.getElementById('gallery-right');

            leftContainer.innerHTML = '';
            rightContainer.innerHTML = '';

            galleryData.forEach((item, index) => {
                const thumb = document.createElement('div');
                thumb.className = `gallery-thumb ${index === 0 ? 'active' : ''}`;
                thumb.onclick = () => setGalleryImage(index);
                thumb.innerHTML = `<img src="${item.src}" loading="lazy">`;
                if (index < galleryData.length / 2) {
                    leftContainer.appendChild(thumb);
                } else {
                    rightContainer.appendChild(thumb);
                }
            });
            setGalleryImage(0);
        }

        function setGalleryImage(index) {
            if (!galleryData || galleryData.length === 0) return;
            currentGalleryIndex = index;
            if (currentGalleryIndex < 0) currentGalleryIndex = galleryData.length - 1;
            if (currentGalleryIndex >= galleryData.length) currentGalleryIndex = 0;

            const item = galleryData[currentGalleryIndex];
            const img = document.getElementById('gallery-main-img');
            const title = document.getElementById('gallery-title');
            gsap.to(img, {
                opacity: 0, scale: 0.95, duration: 0.2, onComplete: () => {
                    // Update Content
                    img.src = item.src;
                    title.innerText = item.name;
                    // Animation In
                    gsap.to(img, { opacity: 1, scale: 1, duration: 0.4 });
                }
            });
            document.querySelectorAll('.gallery-thumb').forEach((el, i) => {
                if (i === currentGalleryIndex) el.classList.add('active');
                else el.classList.remove('active');
            });
        }

        function changeGalleryImage(direction) {
            setGalleryImage(currentGalleryIndex + direction);
        }
        window.addEventListener('load', () => {
            // Init Gallery
            try {
                initGallery();
            } catch (e) {
                console.error("Gallery Init Failed", e);
            }
            const cards = document.querySelectorAll('.metric-card');
            cards.forEach(card => {
                card.className = 'kpi-card';
                const h3 = card.querySelector('h3');
                if (h3) h3.className = 'kpi-title';
                const p = card.querySelector('p');
                if (p) p.className = 'kpi-value';
            });
            const tl = gsap.timeline();
            const bar = document.getElementById('loading-bar');
            const overlay = document.getElementById('loader-overlay');
            const text = document.getElementById('loader-text');
            const status = document.getElementById('loader-status');

            const statusMessages = [
                "加载核心模块...",
                "解密数据流...",
                "建立安全连接...",
                "渲染可视化组件...",
                "访问权限已确认"
            ];
            let msgIndex = 0;
            const statusInterval = setInterval(() => {
                if (msgIndex < statusMessages.length) {
                    status.innerText = statusMessages[msgIndex];
                    msgIndex++;
                } else {
                    clearInterval(statusInterval);
                }
            }, 400);
            tl.to(bar, {
                width: "100%",
                duration: 2.5,
                ease: "power2.inOut",
            })
                .to(text, {
                    duration: 0.5,
                    onStart: () => {
                        text.innerText = "系统上线";
                        text.style.color = "#0aff60";
                        text.style.textShadow = "0 0 20px #0aff60";
                    }
                })
                .to(".loader-content", {
                    opacity: 0,
                    scale: 1.1,
                    duration: 0.5,
                    ease: "power2.in"
                }, "+=0.2")
                .to(overlay, {
                    opacity: 0,
                    duration: 1.0,
                    ease: "power2.inOut",
                    onComplete: () => {
                        overlay.style.display = 'none';
                    }
                })
                .from(".hero-content", {
                    y: 50,
                    opacity: 0,
                    duration: 1,
                    ease: "power3.out"
                }, "-=0.4");
        });
        function switchTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(el => el.style.display = 'none');
            document.querySelectorAll('.nav-btn').forEach(el => el.classList.remove('active'));

            document.getElementById('tab-' + tabName).style.display = 'block';
            event.target.classList.add('active');

            setTimeout(() => {
                window.dispatchEvent(new Event('resize'));
            }, 50);
        }

        function openModal(src) {
            document.getElementById('modal-img').src = src;
            document.getElementById('modal').classList.add('active');
        }
        function closeModal() {
            document.getElementById('modal').classList.remove('active');
        }

        const track = document.getElementById('carousel-track');
        if (galleryData && galleryData.length > 0) {
            galleryData.forEach((item, i) => {
                if (i > 5) return; // Limit items
                let div = document.createElement('div');
                div.className = 'carousel-item';
                div.innerHTML = `<img src="${item.src}">`;
                // Simple 3D positioning
                div.style.transform = `rotateY(${i * 60}deg) translateZ(300px)`;
                track.appendChild(div);
            });
            let angle = 0;
            setInterval(() => {
                angle -= 0.5;
                track.style.transform = `rotateY(${angle}deg)`;
            }, 30);
        }
    </script>
